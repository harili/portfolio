<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PortfolioIlies</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-bold-rounded/css/uicons-bold-rounded.css'>
</head>
<body>
    <div class="row">
        <div class="col-md-3">
            <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="height:100vh;">
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a href="#/Home/Index" class="nav-link">
                            <i class="fi fi-br-home"></i>Accueil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#/Home/AboutMe" class="nav-link">
                            <i class="fi fi-br-user"></i> Moi
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#/Home/Resume" class="nav-link">
                            <i class="fi fi-br-physics"></i> CV
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#/Home/Portfolio" class="nav-link">
                            <i class="fi fi-br-backpack"></i> Portfolio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#/Home/Contact" class="nav-link">
                            <i class="fi fi-br-address-book"></i> Contact
                        </a>
                    </li>
                </ul>
                <hr>
            </div>
        </div>
        <div class="col-md-3 header-profile" style="height:100vh;">
            <div class="header-picture">
                <h3>test</h3>
            </div>
        </div>
        <div class="col-md-6" style="height:100vh;">
            <div id="page-container">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
